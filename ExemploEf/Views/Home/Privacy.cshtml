@{
    ViewData["Title"] = "Políticas de privacidade";
}
<h1 class="ocean-title">@ViewData["Title"]</h1>

<p class="ocean-text">Use esta página para detalhar a política de privacidade do seu site.</p>

<!-- Carregar a fonte do Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">

<!-- Estilos de tema mar -->
<style>
    body {
        background-color: #e0f7fa; /* Fundo azul claro */
        font-family: 'Pacifico', cursive; /* Fonte mais fofa e cursiva */
        color: #0277bd; /* Texto azul escuro */
    }

    .ocean-title {
        color: #01579b;
        font-weight: bold;
        text-align: center;
        text-shadow: 2px 2px 5px rgba(0, 123, 255, 0.3); /* Efeito de sombra suave */
        margin-bottom: 20px;
        font-family: 'Pacifico', cursive; /* Fonte fofa no título */
    }

    .ocean-text {
        font-size: 18px;
        color: #0277bd;
        text-align: center;
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #b2ebf2; /* Fundo suave de mar */
        border-radius: 8px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
        font-family: 'Pacifico', cursive; /* Fonte fofa no texto */
    }

    /* Melhorando a legibilidade e o design do texto */
    p.ocean-text {
        line-height: 1.6;
    }
</style>

