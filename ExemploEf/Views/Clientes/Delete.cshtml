@model ExemploEf.Models.Cliente

@{
    ViewData["Title"] = "Excluir";
}

<!-- Container principal -->
<div class="container ocean-container mt-4">
    <div class="text-center ocean-header">
        <h1 class="fw-bold ocean-title">Excluir Cliente</h1>
        <p class="text-muted ocean-text">Tem certeza de que deseja excluir este cliente?</p>
    </div>

    <div>
        <h4 class="ocean-subtitle">Cliente</h4>
        <hr class="ocean-hr" />
        <dl class="row ocean-details">
            <dt class="col-sm-2 ocean-label">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10 ocean-value">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2 ocean-label">
                @Html.DisplayNameFor(model => model.Nascimento)
            </dt>
            <dd class="col-sm-10 ocean-value">
                @Html.DisplayFor(model => model.Nascimento)
            </dd>
        </dl>
    </div>

    <!-- Formulário de Exclusão -->
    <div class="text-center ocean-actions">
        <form asp-action="Delete">
            <input type="hidden" asp-for="ClienteID" />
            <button type="submit" class="btn ocean-btn-delete">
                <i class="bi bi-trash"></i> Deletar
            </button>
            <a asp-action="Index" class="ocean-link">
                <i class="bi bi-arrow-left-circle"></i> Voltar para lista
            </a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<!-- Estilos do Tema de Mar -->
<style>
    /* Fundo com tons de azul e elementos fofos */
    body {
        background-color: #e0f7fa; /* Azul clarinho */
        font-family: 'Comic Sans MS', cursive, sans-serif;
        color: #0277bd; /* Azul mais escuro para contraste */
        background-image: url('https://www.transparenttextures.com/patterns/diagonal-stripes-light.png'); /* Textura suave */
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
    }

    /* Container principal */
    .ocean-container {
        background-color: rgba(255, 255, 255, 0.9); /* Fundo branco translúcido */
        border-radius: 15px;
        padding: 40px;
        box-shadow: 0px 6px 20px rgba(0, 0, 0, 0.1);
        max-width: 800px;
        margin: 0 auto;
    }

    /* Título principal */
    .ocean-header {
        margin-bottom: 30px;
    }

    .ocean-title {
        color: #01579b;
        font-size: 2.5rem;
        font-family: 'Pacifico', cursive;
        text-shadow: 3px 3px 10px rgba(0, 123, 255, 0.5); /* Efeito de sombra suave */
    }

    .ocean-text {
        color: #0277bd;
        font-size: 1.2rem;
        font-style: italic;
    }

    /* Subtítulo Cliente */
    .ocean-subtitle {
        color: #01579b;
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 20px;
    }

    /* Estilos de descrição */
    .ocean-details {
        margin-bottom: 30px;
    }

    .ocean-label {
        color: #01579b;
        font-size: 1.1rem;
        font-weight: bold;
    }

    .ocean-value {
        color: #4db6ac;
        font-size: 1.2rem;
        font-style: italic;
    }

    /* Linha horizontal */
    .ocean-hr {
        border: 1px solid #4db6ac;
    }

    /* Ações de exclusão */
    .ocean-actions {
        margin-top: 30px;
    }

    .ocean-btn-delete {
        background-color: #d32f2f; /* Vermelho para ação de exclusão */
        color: white;
        font-weight: bold;
        padding: 12px 30px;
        border-radius: 15px;
        border: none;
        transition: background-color 0.3s ease;
        font-family: 'Comic Sans MS', cursive, sans-serif;
    }

        .ocean-btn-delete:hover {
            background-color: #c2185b; /* Vermelho mais forte para hover */
        }

    /* Links de Ação */
    .ocean-link {
        color: #01579b;
        font-size: 1.1rem;
        text-decoration: none;
        font-weight: bold;
        margin-left: 20px;
    }

        .ocean-link:hover {
            text-decoration: underline;
            color: #0288d1;
        }

        /* Ícones */
        .ocean-link i, .ocean-btn-delete i {
            font-size: 1.3rem;
            margin-right: 8px;
        }
</style>

