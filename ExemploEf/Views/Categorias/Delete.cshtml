@model ExemploEf.Models.Categoria

@{
    ViewData["Title"] = "Deletar";
}

<h1 class="text-center cute-font text-danger my-4 ocean-theme">Deletar Categoria</h1>

<h3 class="text-center cute-font text-warning">Tem certeza de que deseja excluir isso?</h3>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-4 ocean-form-container">
                <h4 class="text-center cute-font text-info ocean-theme">Categoria</h4>
                <hr class="ocean-theme" />

                <dl class="row">
                    <dt class="col-sm-4 font-weight-bold ocean-label">Nome:</dt>
                    <dd class="col-sm-8 ocean-input">@Html.DisplayFor(model => model.Nome)</dd>
                </dl>

                <div class="d-flex justify-content-between">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="CategoriaId" />
                        <button type="submit" class="btn ocean-btn btn-danger btn-lg cute-btn">Excluir</button>
                    </form>
                    <a asp-action="Index" class="btn ocean-btn btn-secondary btn-lg cute-btn">Voltar</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<!-- Estilos de tema mar -->
<style>
    body {
        background-color: #e0f7fa; /* Azul claro suave como fundo */
        font-family: 'Poppins', Arial, sans-serif; /* Fonte fofa e amigável */
        color: #0277bd; /* Azul marinho */
    }

    .ocean-theme {
        color: #0288d1; /* Azul forte para títulos */
        font-family: 'Dancing Script', cursive; /* Fonte fofa */
    }

    .cute-font {
        font-family: 'Dancing Script', cursive;
        font-weight: 400;
    }

    h1 {
        text-shadow: 2px 2px 5px rgba(0, 123, 255, 0.3); /* Efeito de sombra suave */
    }

    .ocean-form-container {
        background-color: #b2ebf2; /* Cor de fundo suave para o formulário */
        border-radius: 8px;
        padding: 30px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
    }

    .ocean-label {
        color: #0277bd;
        font-size: 14px;
    }

    .ocean-input {
        font-size: 16px;
        color: #0277bd;
        font-weight: bold;
    }

    .ocean-btn {
        background-color: #0288d1;
        color: white;
        font-size: 16px;
        padding: 12px 20px;
        border: none;
        border-radius: 5px;
        transition: background-color 0.3s;
        text-transform: capitalize;
    }

    .ocean-btn:hover {
        background-color: #0277bd;
    }

    .cute-btn {
        border-radius: 8px;
        padding: 8px 15px;
        font-weight: 500;
    }

    hr.ocean-theme {
        border: 1px solid #0288d1;
        width: 60%;
        margin: 20px auto;
    }

    /* Responsividade */
    (max-width: 768px) {
        .col-md-6 {
            width: 100%;
        }
    }
</style>

<!-- Incluindo a fonte Dancing Script para um toque fofo -->
<link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
