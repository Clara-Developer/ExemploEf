@model ExemploEf.Models.Categoria

@{
    ViewData["Title"] = "Editar";
}

<h1 class="text-center ocean-theme cute-font my-4">Editar Categoria</h1>

<h4 class="text-center text-secondary ocean-theme">Alterar os dados da categoria</h4>
<hr class="ocean-theme my-4" />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-4 ocean-form-container">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3 ocean-error"></div>

                    <input type="hidden" asp-for="CategoriaId" />

                    <div class="form-group ocean-form-group">
                        <label asp-for="Nome" class="control-label ocean-label font-weight-bold">Nome</label>
                        <input asp-for="Nome" class="form-control ocean-input" placeholder="Digite o nome da categoria" />
                        <span asp-validation-for="Nome" class="text-danger ocean-error"></span>
                    </div>

                    <div class="form-group text-center">
                        <input type="submit" value="Salvar" class="btn ocean-btn btn-lg cute-btn" />
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn ocean-btn btn-secondary btn-lg cute-btn">Voltar para lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<!-- Estilos de tema mar -->
<style>
    body {
        background-color: #e0f7fa; /* Azul claro suave como fundo */
        font-family: 'Poppins', Arial, sans-serif; /* Fonte fofa e amigável */
        color: #0277bd; /* Azul marinho */
    }

    .ocean-theme {
        color: #0288d1; /* Azul forte para títulos */
        font-family: 'Dancing Script', cursive; /* Fonte fofa */
    }

    .cute-font {
        font-family: 'Dancing Script', cursive;
        font-weight: 400;
    }

    h1 {
        text-shadow: 2px 2px 5px rgba(0, 123, 255, 0.3); /* Efeito de sombra suave */
    }

    .ocean-form-container {
        background-color: #b2ebf2; /* Cor de fundo suave para o formulário */
        border-radius: 8px;
        padding: 30px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
    }

    .ocean-form-group {
        margin-bottom: 20px;
    }

    .ocean-label {
        color: #0277bd;
        font-size: 14px;
    }

    .ocean-input {
        border: 1px solid #0288d1;
        border-radius: 5px;
        padding: 10px;
        background-color: #ffffff;
        font-size: 16px;
    }

    .ocean-input:focus {
        border-color: #00796b;
        outline: none;
        box-shadow: 0px 0px 5px rgba(0, 150, 136, 0.6);
    }

    .ocean-btn {
        background-color: #0288d1;
        color: white;
        font-size: 16px;
        padding: 12px 20px;
        border: none;
        border-radius: 5px;
        width: 100%;
        transition: background-color 0.3s;
        text-transform: capitalize;
    }

    .ocean-btn:hover {
        background-color: #0277bd;
    }

    .cute-btn {
        border-radius: 8px;
        padding: 8px 15px;
        font-weight: 500;
    }

    .ocean-error {
        font-size: 12px;
        color: #e57373;
    }

    .ocean-link {
        color: #0277bd;
        text-decoration: none;
    }

    .ocean-link:hover {
        color: #01579b;
        text-decoration: underline;
    }

    hr.ocean-theme {
        border: 1px solid #0288d1;
        width: 60%;
        margin: 20px auto;
    }

    /* Estilos de Responsividade */
     (max-width: 768px) {
        .col-md-6 {
            width: 100%;
        }

        .ocean-btn {
            width: 100%;
        }
    }
</style>

<!-- Incluindo a fonte Dancing Script para um toque fofo -->
<link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

