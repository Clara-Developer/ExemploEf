@model ExemploEF.Models.Produto

@{
    ViewData["Title"] = "Criar";
}

<h1>Criar</h1>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estoque" class="control-label"></label>
                <input asp-for="Estoque" class="form-control" />
                <span asp-validation-for="Estoque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoriaId" class="control-label"></label>
                <select asp-for="CategoriaId" class ="form-control" asp-items="ViewBag.CategoriaId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<!-- Estilos de tema mar -->
<style>
    body {
        background-color: #e0f7fa; /* Azul claro suave como fundo */
        font-family: 'Poppins', Arial, sans-serif; /* Fonte fofa e amigável */
        color: #0277bd; /* Azul marinho */
    }

    .ocean-theme {
        color: #0288d1; /* Azul forte para títulos */
        font-family: 'Dancing Script', cursive; /* Fonte fofa */
    }

    .cute-font {
        font-family: 'Dancing Script', cursive;
        font-weight: 400;
    }

    h1, h4 {
        text-shadow: 2px 2px 5px rgba(0, 123, 255, 0.3); /* Efeito de sombra suave */
    }

    .ocean-label {
        color: #0277bd;
        font-size: 14px;
    }

    .ocean-input {
        font-size: 16px;
        color: #0277bd;
        font-weight: bold;
    }

    .ocean-btn {
        background-color: #0288d1;
        color: white;
        font-size: 16px;
        padding: 12px 20px;
        border: none;
        border-radius: 5px;
        transition: background-color 0.3s;
        text-transform: capitalize;
    }

        .ocean-btn:hover {
            background-color: #0277bd;
        }

    .cute-btn {
        border-radius: 8px;
        padding: 8px 15px;
        font-weight: 500;
    }

    hr.ocean-theme {
        border: 1px solid #0288d1;
        width: 60%;
        margin: 20px auto;
    }

    /* Responsividade */
    (max-width: 768px) {
        .col-md-6

    {
        width: 100%;
    }

    }
</style>

<!-- Incluindo a fonte Dancing Script para um toque fofo -->
<link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400&display=swap" rel="stylesheet">
